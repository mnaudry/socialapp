{% block content_page_wrapper %}
<div id="login-page" class="container">
    {% block page_header %}
        <div class="row justify-content-center">
            <div class="col-md-5 text-center login-header">
                <a href="{#{{ path('app_index') }}#}" alt="LOBA logo login-logo"><img src="{{ asset('build/images/logo.svg') }}" class="logo" alt="LOBAA logo" ></a>
                <h1 class="h2 headings">Bienvenue sur Lobaa !</h1>
                <h6 class="h6 headings text-muted">Echangez simplement avec vos proches</h6>
            </div>
        </div>
    {% endblock %}
    {% block page_content %}
   
        <div class="row justify-content-center">
            <div class="col-md-5 col-sm-12">
                <form method="post" novalidate>
                        <div class="form-group">
                            <input placeholder="E-mail or Username" type="email" value="{{ last_username }}" name="email" class="form-control mx-auto" id="email" >
                        </div>
                        <div class="form-group">
                            <input placeholder="Mot de passe" type="password" class="form-control mx-auto" name="password" id="password">
                        </div>
                        <div class="forget-password">
                            <a class="mx-auto" href="" alt="mot de pass oublié">Mot de passe oublié ?</a>
                        </div>

                        <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                        >
                        <button class="btn btn-lg btn-primary mx-auto" type="submit">
                            Se connecter
                        </button>

                        <div class="text-center login-or my-3">
                            ou
                        </div>
                        <div class="fb-login-btn-wrapper my-3 mx-auto  text-center">
                            <div style="display:block" class="fb-login-button" data-width="100%" data-size="large" data-button-type="continue_with" data-layout="rounded" data-auto-logout-link="false" data-use-continue-as="false"></div>
                        </div>
                        <div class="g-login-btn-wrapper">
                                <div id="g-login-btn-id" class="g-login-btn my-3 mx-auto">
                                  <img class="g-icon" src="{{ asset('build/images/g-normal.svg')}}" alt="Google login Logo">
                                  <span class="buttonText">Continuer avec Google</span>
                            </div>
                        </div>

                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                   
                  {#  <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >#}

                   
                
                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html
                
                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}
                
                  
                </form>
            </div>
        </div>
    
    {% endblock %}
</div>
{% endblock %}

